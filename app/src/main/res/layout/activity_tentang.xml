<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".Tentang">

    <RelativeLayout
        android:background="@drawable/bg_white_round_top"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:src="@drawable/ic_shape"
        android:layout_marginTop="-10dp"
        android:layout_width="220dp"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_logo_mims"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Manajemen Informatika Mobile Service V.0 dibuat pada tahun 2022 oleh kelompok 3 dengan tujuan menyelesaikan tugas akhir mata kuliah Mobile Proggramming. Adapun anggota yang terlibat yakni :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Dede Zaelani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Maulana Kurniawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Nabila Azzahra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Wildan Badrul Anshari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="M Ikbal Surya Ramdani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="kelas Manajemen Informatika 20A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Aplikasi ini dibuat dengan bahasa pemrograman Java serta dengan design yang baik. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>